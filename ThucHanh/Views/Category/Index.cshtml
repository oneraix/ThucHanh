@model IEnumerable<ThucHanh.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<style>
    h1 {
        text-align: center;
    }

</style>
<h1>LOẠI SẢN PHẨM</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>Chức năng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Chỉnh sửa</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Chi tiết</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>