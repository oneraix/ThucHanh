@model IEnumerable<ThucHanh.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<style>
    h1 {
        text-align: center;
    }

</style>
<h1>SẢN PHẨM</h1>

<p>
    <a href="Product/Add"> Tạo mới </a>
    <!--  <a asp-action="Create">Create New</a>-->
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Ảnh sản phẩm</th>
            <th>Loại</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>

                <td>@product.Description</td>
                <td> <img src="@product.ImageUrl" alt=" ProductImage" style=" width : 150px; height :auto" /> </td>
                <td>@product.Category?.Name</td>
                <td>
                    <a asp-action="Display" class="btn btn-warning" asp-route-id="@product.Id">Chi tiết</a> |
                    <a asp-action="Update" class="btn btn-primary" asp-route-id="@product.Id">Chỉnh sửa</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@product.Id">Xoá</a>
                </td>

            </tr>
        }
    </tbody>
</table>
